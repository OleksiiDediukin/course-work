<Window x:Class="Cashbox.Views.OrderProductQuantity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Cashbox.Views"
        mc:Ignorable="d"
        Title="OrderProductQuantity" Height="150" Width="300">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <TextBox materialDesign:HintAssist.Hint="Quantity" x:Name="quantity" Margin="20 17 20 17" Grid.Row="0" Grid.Column="0"></TextBox>
            <TextBox materialDesign:HintAssist.Hint="Sale" x:Name="sale" Margin="20 17 20 17" Grid.Row="0" Grid.Column="1"></TextBox>
            <Button Height="40" Width="100" Grid.Row="1" Grid.Column="0" Click="AddOrderProduct_Click">Add</Button>
            <Button Height="40" Width="100" Grid.Row="1" Grid.Column="1" IsCancel="True">Cancel</Button>
        </Grid>
    </Grid>
</Window>
